                stretch_width: true
              %}
            </div>
            {% if section.settings.icon2_head != blank %}
            <h3>{{ section.settings.icon2_head }}</h3>
            {% endif %}
          </div>
          {% endif %}

          {% if section.settings.icon3_img != blank %}
          <div class="icon1">
            <div class="s_img_wrapper">
              {%
                render 'image-element',
                image: section.settings.icon3_img,
                alt: section.settings.icon3_head,
                stretch_width: true
              %}
            </div>
            {% if section.settings.icon3_head != blank %}
            <h3>{{ section.settings.icon3_head }}</h3>
            {% endif %}
          </div>
          {% endif %}

          {% if section.settings.icon4_img != blank %}
          <div class="icon1">
            <div class="s_img_wrapper">
              {%
                render 'image-element',
                image: section.settings.icon4_img,
