            {% endif %}
          </div>
        </div>
      </div>
      <div class="slider_section">
        <div class="slider_inner flickity-slider-text-slider">
          {% for block in section.blocks %}
          <img class="lazyload lazyload--fade-in" data-src="{{ block.settings.img | img_url: '550x' }}" alt="{{ block.settings.img.alt }}" />
          {% endfor %}
        </div>
      </div>   
      {% endif %}
    </div>    
  </div>
</div>

<script>
  $( document ).ready(function() {
      jQuery('.flickity-slider-text-slider').flickity({
        cellAlign: 'left',
        pageDots: false,
        autoPlay: true,
        contain: true
      });
  });
</script>

