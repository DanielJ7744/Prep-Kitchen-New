<style>
  .slider_text_inner {
    display: grid;
    grid-template-columns: 40% 60%;
    gap: 30px;
    align-items: flex-start;
    max-width: 1300px;
    margin-left: auto;
    margin-right: auto;
  }
  .slider_text_inner .content_wrapper {
    max-width: unset;
  }

  .text_section h2 {
    font-size: 40px;
    line-height: 42px;
    margin: 0 0 23px;
    text-align: left;
    letter-spacing: 0;
    text-transform: none;
    font-weight: 400;
    font-family: 'rubikmedium';
    color: #464646;
  }

  .icons_wrapper {
    display: flex;
  }

  .icon1 {
    width: 105px;
    min-height: 100px;
    margin: 0 15px;
    text-align: center;
  }

  .s_img_wrapper {
    height: 92px;
    margin-bottom: 23px;
    display: flex;
    align-items: flex-end;
    justify-content: center;
  }
  .s_img_wrapper img {
    width: 84px;
  }

  .icon1 h3 {  
    padding: 0;
    line-height: normal;
    color: #2c2c2c;
    font-family: rubikregular;
    margin: 0;
    font-size: 16px;
    text-transform: lowercase;
  }  

  .content_wrapper {
    margin-top: 29px;
    color: #2c2c2c;
    font-family: rubikregular;
    text-transform: none;
    max-width: 580px;
  }

  .content_wrapper p {
    font-size: 16px;
    font-family: 'rubikregular';
    font-weight: 400;
    line-height: 24px;
    margin-bottom: 10px;
  }

  .meal_options_section h3 {
    color: #23d16a;
    margin: 22.5px 0;
    font-size: 18px;
    font-family: rubikmedium;
    text-transform: lowercase;
  }

  .mo_btns a {
    display: inline-block;
    background: #23d16a;
    color: #fff;
    font-size: 18px;
    font-family: 'rubikregular';
    padding: 8px 34px;
    border-radius: 25px;
    font-weight: 400;
    min-width: 150px;
    border: 1px solid transparent;
    line-height: 1.42857143;
    transition: all .3s;
    margin-right: 11px;
  }

  .mo_btns a:hover {
    box-shadow: 1px 1px 9px #ccc;
    text-decoration: none;
  }

  .slider_text_inner .slider_section {
    padding-bottom: 60px;
  }

  .flickity-slider-text-slider .flickity-button svg {
    fill: #23d16a;
  }
  .flickity-slider-text-slider .flickity-button {
    background: unset;
  }
   .flickity-slider-text-slider .flickity-prev-next-button {
    top: 100%;
    width: 60px;
    height: 60px;
    transform: translateY(0);
  }
  
  
  @media only screen and (min-width: 768px) and (max-width: 991px) {
    .text_section h2 { font-size: 32px; line-height: 38px; }

    .mo_btns a:last-child { margin-top: 14px; }
  }

  @media screen and (max-width: 767px) {
    .slider_text_inner { display: block; }

    .text_section h2 { font-size: 25px; line-height: 30px; margin: -30px 0 23px; text-align: center; }

    .icons_wrapper { justify-content: space-around; align-items: flex-start; }

    .icon1 h3 { padding: 0; font-size: 14px; line-height: 17px; }

    .content_wrapper { text-align: center; margin: 29px auto 0; }

    .content_wrapper p { font-size: 14px; line-height: 24px; }

    .meal_options_section h3 { color: #23D16A; margin: 1.25em 0; line-height: 24px; font-size: 14px; text-align: center; }

    .mo_btns { text-align: center; }

    .mo_btns a { text-transform: initial; font-size: 14px; font-family: 'rubikregular'; padding: 7px 30px; margin: 0 0 14px; }

  }
</style>

<div class="slider_text_wrapper-{{ section.id }}">
  <div class="page-width">
    <div class="slider_text_inner">
      {% if section.settings.slider_alignment == 'left' %}
      <div class="slider_section">
        <div class="slider_inner flickity-slider-text-slider">
          {% for block in section.blocks %}
          <img class="lazyload lazyload--fade-in" data-src="{{ block.settings.img | img_url: '550x' }}" alt="{{ block.settings.img.alt }}" />
          {% endfor %}
        </div>
      </div>
      <div class="text_section">
        {% if section.settings.head != blank %}
        <h2>{{ section.settings.head }}</h2>
        {% endif %}

        <div class="icons_wrapper">
          {% if section.settings.icon1_img != blank %}
