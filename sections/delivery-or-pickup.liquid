<style>
  .delivery_pickup_inner {
    display: grid;
    {% if section.settings.img_alignment == 'left' %}
    grid-template-columns: 55% 45%;      
    {% else %}
    grid-template-columns: 45% 55%;
    {% endif %}    
  }

  .dp_text_section {
    {% if section.settings.bg != blank %}
    background: url({{ section.settings.bg | img_url: '1296x' }});
    background-repeat: no-repeat;
    background-size: cover;
    background-position: center;
    width: 100%;
    height: 100%;
    {% else %}
    background: #fff;
    {% endif %}
    position: relative;
  }

  .dp_text_inner {
    max-width: 405px;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    margin: auto;
    width: 100%;
  }

  .dp_text_section h2 {
    font-size: 40px;
    line-height: 47px;
    margin: 0;
    color: #fff;
    text-transform: lowercase;
    font-family: 'rubikregular';
  }

  .dp_text_inner h3 {
    margin: 32px 0 12px;
    font-size: 20px;
    font-weight: 400;
    font-family: 'rubikmedium';
    color: #fff;
  }

  .dp_text_inner p {
    margin-bottom: 0;
    color: #fff;
    line-height: 24px;
    font-size: 16px;
    font-family: 'rubikregular';
    font-weight: 400;
    text-transform: none;
  }

  @media only screen and (min-width: 992px) and (max-width: 1199px) {
    .dp_text_section h2 { font-size: 22px; line-height: 30px; }

    .dp_text_inner h3 { margin: 24px 0 10px; font-size: 18px; }

    .dp_text_inner p { line-height: 20px; font-size: 14px; }
  }
  
  @media only screen and (min-width: 200px) and (max-width: 767px) {
    .delivery_pickup_inner { grid-template-columns: 1fr; }
    
    .dp_text_section { min-height: 460px; }
    
    .dp_text_inner { max-width: 335px; margin: 0 auto; padding: 0 15px; }
    
    .dp_text_section h2 { font-size: 20px; line-height: 27px; }
    
    .dp_text_inner h3 { margin: 24px 0 10px; font-size: 16px; }
    
    .dp_text_inner p { line-height: 16px; font-size: 12px; }
  }
</style>

<div class="delivery_picker_wrapper-{{ section.id }}">
  <div class="delivery_pickup_inner">
    {% if section.settings.img_alignment == 'left' %}
    <div class="dp_img_section">
      {% if section.settings.img != blank %}
      <img class="lazyload lazyload--fade-in" data-src="{{ section.settings.img | img_url: '1296x' }}"/>
      {% endif %}
    </div>
    <div class="dp_text_section">           
      <div class="dp_text_inner">
        {% if section.settings.head != blank %}
        <h2>{{ section.settings.head }}</h2>
        {% endif %}
        {% for block in section.blocks %}
        {% if block.settings.title != blank %}
        <h3>{{ block.settings.title }}</h3>
        {% endif %}
        {% if block.settings.content != blank %}
        <p>{{ block.settings.content }}</p>
        {% endif %}
        {% endfor %}
      </div>
    </div>
    {% else %}    
    <div class="dp_text_section">      
      <div class="dp_text_inner">
        {% if section.settings.head != blank %}
        <h2>{{ section.settings.head }}</h2>
        {% endif %}
        {% for block in section.blocks %}
        {% if block.settings.title != blank %}
        <h3>{{ block.settings.title }}</h3>
        {% endif %}
        {% if block.settings.content != blank %}
        <p>{{ block.settings.content }}</p>
        {% endif %}
        {% endfor %}
      </div>
    </div>
    <div class="dp_img_section">
      {% if section.settings.img != blank %}
      <img class="lazyload lazyload--fade-in" data-src="{{ section.settings.img | img_url: '1296x' }}"/>
      {% endif %}
    </div>
    {% endif %}
  </div>
</div>

